@model Holoul.Models.ProblemViewModel

@{
    Layout = "_UserLayout";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home Solution Assistant</title>
    <meta name="description" content="Get expert solutions for your home problems" />
    <link rel="stylesheet" href="~/css/submitproblem.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/holoul.css" asp-append-version="true" />
    <script src="~/js/submit.js"></script>
    <link href="https://fonts.googleapis.com/css2?family=SF+Pro+Display:wght@400;500;600&display=swap" rel="stylesheet">
</head>

<body>
    <div class="container-submit">
        <header class="header-submit">
            <h1>Home Solution Assistant</h1>
            <p>Get expert solutions for your home problems</p>
        </header>

        <main class="main-content">
            <!-- Solution Area -->
            <div id="solution-area" class="solution-area empty">
                <div id="solution-content" class="solution-content">
                    <h3>Solution</h3>
                    <p id="solution-text"></p>
                </div>
                <div id="loading" class="loading-indicator hidden">
                    <div class="spinner"></div>
                    <p>Finding the best solution<span class="loading-dots"></span></p>
                </div>
            </div>
            <form asp-action="submitaproblem" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Problem Input Area -->
            <div class="problem-input glass-panel">
                <div class="input-header">
                    <h3>Describe your problem</h3>
                    <button id="clear-button" class="clear-button hidden">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="18" y1="6" x2="6" y2="18"></line><line x1="6" y1="6" x2="18" y2="18"></line></svg>
                    </button>
                </div>

                <div class="textarea-container">
                    <textarea id="problem-input" asp-for="ProblemDescription" placeholder="What home problem can I help you solve today?"></textarea>
                    <span asp-validation-for="ProblemDescription" class="text-danger"></span>
                </div>

                <!-- File Preview Area -->
                <div id="file-preview" class="file-preview hidden">
                    <p>Attached files:</p>
                    <div id="file-list" class="file-list"></div>
                </div>

                <!-- Action Area -->
                <div id="drop-zone" class="action-area">
                    <div class="file-upload">
                        <input type="file" id="file-input" multiple hidden>
                        <button id="file-button" class="file-button">
                            <svg xmlns="http://www.w3.org/2000/svg" asp-for="ProblemImage" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect><circle cx="8.5" cy="8.5" r="1.5"></circle><polyline points="21 15 16 10 5 21"></polyline></svg>
                            <span asp-validation-for="ProblemImage" class="text-danger"></span>
                        </button>
                        <p class="upload-text">Drag & drop or click to attach files</p>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="احصل على الحل" class="btn btn-primary" />
                    </div>
                </div>
            </div>
            </form>

        </main>
    </div>

    <script src="script.js"></script>
    <!-- IMPORTANT: DO NOT REMOVE THIS SCRIPT TAG OR THIS VERY COMMENT! -->
    <script src="https://cdn.gpteng.co/gptengineer.js" type="module"></script>
</body>
</html>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}